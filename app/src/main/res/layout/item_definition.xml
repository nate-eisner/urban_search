<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    app:contentPadding="8dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/definition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingBottom="8dp"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toTopOf="@+id/thumbs_up_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hi\nHi" />

        <TextView
            android:id="@+id/thumbs_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/thumbs_up_img"
            app:layout_constraintEnd_toStartOf="@+id/thumbs_up_img"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/definition"
            tools:text="200" />

        <ImageView
            android:id="@+id/thumbs_up_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_up"
            app:layout_constraintEnd_toStartOf="@+id/thumbs_down"
            app:layout_constraintStart_toEndOf="@+id/thumbs_up"
            app:layout_constraintTop_toBottomOf="@id/definition" />

        <TextView
            android:id="@+id/thumbs_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/thumbs_down_img"
            app:layout_constraintEnd_toStartOf="@+id/thumbs_down_img"
            app:layout_constraintStart_toEndOf="@+id/thumbs_up_img"
            app:layout_constraintTop_toBottomOf="@id/definition"
            tools:text="90" />

        <ImageView
            android:id="@+id/thumbs_down_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_thumb_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thumbs_down"
            app:layout_constraintTop_toBottomOf="@id/definition" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>